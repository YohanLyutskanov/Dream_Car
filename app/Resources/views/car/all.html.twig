{% extends "base.html.twig" %}
{% block body %}
    <div class="container" style="text-align: center">

        {% for msg in app.session.flashBag.get('info') %}
            <div class="alert alert-success">
                <h1>{{ msg }}</h1>
            </div>
        {% endfor %}

        <form>
            <div style="background-color:rgba(255,0,0,0.7);">
                <div class="table-responsive">
                    {% if description is defined %}
                        <h4 style="color: darkgrey"><b style="color: white">Description: </b> {{ description }}</h4>
                    {% endif %}
                    <table class="table table-hover" border="1" style="color: black">
                        <thead>
                        <tr>
                            <th>Brand</th>
                            <th>Year</th>
                            <th>Power (HP)</th>
                            <th>Dealer</th>
                            <th>Description</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for car in cars %}
                            <tr>
                                <td>{{ car.brand }}</td>
                                <td>{{ car.year }}</td>
                                <td>{{ car.power }}</td>
                                <td>{{ car.importer }}</td>
                                <td>{{ car.description }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
    </div>
{% endblock %}